<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LUN"
            android:id="@+id/dayOfWeek" android:layout_gravity="center_horizontal" android:textSize="10sp"
            android:textColor="#555555"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:id="@+id/dayOfMonth" android:layout_gravity="center_horizontal" android:textSize="26.5sp"
            android:textColor="#6F9300"/>
</LinearLayout>